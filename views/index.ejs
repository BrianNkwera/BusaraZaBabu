<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <!--FontAwesome cdn-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
        integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <!--google fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@400;633&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="style.css">

</head>

<body>
    <div class="container-fluid">
        <div class="container-fluid msg-header ">
            <div class="active ms-2 mt-2 float-start">
                <h4>Babu</h4>
                <h6>+255747637665</h6>
            </div>
            <div class="header-icons float-end mt-2">
                <i class="fas fa-phone-alt mx-1"></i>
                <i class="fas fa-search mx-1"></i>
                <i class="fas fa-ellipsis-v mx-1"></i>
            </div>
        </div>
        <div class="container-fluid msg-body ">
            <div class="msg-page">
                <div class="received-chats mt-3 ">
                    <div class="received-msg">
                        <div class="received-msg-inbox ms-2 pb-3 pt-1 px-3">
                            <p>Anamlalamikia nan?</p>
                            <span class="time">11:01</span>
                        </div>
                    </div>
                </div>
                <div class="outgoing-msg-box mb-2">
                    <div class="outgoing-msg ms-2 pb-3 pt-1 px-3 float-end mt-3">
                        <p class="mb-3">Lawama anantupia mimi</p>
                        <span class="time">11:01</span>
                    </div>
                </div>
                <div class="received-chats mt-5">
                    <div class="received-msg-mockup mt-3">
                        <div class="received-msg-inbox babu ms-2 pb-3 pt-1 px-3 mt-3">
                            <span class="mockup-msg1">.</span>
                            <span class="mockup-msg2">.</span>
                            <span class="mockup-msg3">.</span>
                            <!-- <p>Babu</p>
                                <span class="time">11:01</span> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Option 1: Bootstrap Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
            crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script>
            const text = '<%-message%>'
            document.querySelector(".mockup-msg3").addEventListener("animationend", function () {
                document.querySelector(".babu").innerHTML = `<p>${text}</p><span class="time">Just now</span>`;
            });
        </script>

</body>

</html>